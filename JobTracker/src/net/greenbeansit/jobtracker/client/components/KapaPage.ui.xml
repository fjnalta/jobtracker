<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui"
             xmlns:widgets="urn:import:net.greenbeansit.jobtracker.client.components.widgets"
             xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
             xmlns:b3="urn:import:org.gwtbootstrap3.extras.slider.client.ui">
    <ui:style>
        /*Container*/
        .mainColumn {
            padding: 0;
        }

        .largeContainer {
            margin-top: 10px;
            margin-bottom: 10px;
            margin-left: 10px;
            margin-right: 10px;
            padding: 10px;
            background-color: #ffffff;
        }

        .smallContainer {
            margin: 10px 10px;
            padding: 10px;
            background-color: #ffffff;
        }

        .textArea {
            max-width: 100%;
            min-width: 100%;
            min-height: 35px;
        }

        .percentageText {
            min-width: 50px;
            height: 43px;
        }

        .possibilitySlider {
            padding-top: 12px;
        }

        .buttonTop {
            border-radius: 4px 4px 0px 0px !important;
        }

        .buttonDown {
            border-radius: 0px 0px 4px 4px !important;
        }

        .smallColumn {
            padding-left: 2px;
        }

        .button {
            margin-top: 5px;
            margin-bottom: 5px;
        }

        /*Title*/
        .title {
            float: right;
            margin: 0;
        }

        .titleRight {
            float: right;
            margin: 0;
        }
    </ui:style>
    <b:Container fluid="true">
        <b:Column size="XS_12,SM_12,MD_4,LG_4" addStyleNames="{style.mainColumn}">
            <b:Row addStyleNames="{style.smallContainer}">
                <b:NavTabs justified="true">
                    <b:TabListItem dataTarget="#myProjects" active="true" text="Meine Projekte"/>
                    <b:TabListItem dataTarget="#newProject" text="Neues Projekt"/>
                </b:NavTabs>
                <b:TabContent>
                    <b:TabPane b:id="myProjects" active="true">
                        <b:Form>
                            <b:FieldSet>
                                <b:FormGroup>
                                    <b:FormLabel for="projectName">Projektname</b:FormLabel>
                                    <select:Select title="Projekt auswählen..." b:id="projectName" ui:field="selectJob">
                                        <select:Option/>
                                        <s:OptGroup label="Meine Projekte" ui:field="myJobsOptGroup">
                                        </s:OptGroup>
                                        <s:OptGroup label="Alle anderen" ui:field="allJobsOptGroup">
                                        </s:OptGroup>
                                    </select:Select>
                                </b:FormGroup>
                                <b:FormGroup>
                                    <b:FormLabel for="projectDesc">Tätigkeitsbeschreibung</b:FormLabel>
                                    <b:TextArea placeholder="Bitte eintragen..." b:id="projectDesc"
                                                addStyleNames="{style.textArea}"/>
                                </b:FormGroup>
                            </b:FieldSet>
                        </b:Form>
                    </b:TabPane>
                    <b:TabPane b:id="newProject">
                        <b:Form>
                            <b:FieldSet>
                                <b:FormGroup>
                                    <b:FormLabel for="projectName">Projektname</b:FormLabel>
                                    <b:TextBox placeholder="Bitte eintragen..." b:id="projectName"
                                               ui:field="textIdentifier"/>
                                </b:FormGroup>
                                <b:FormGroup>
                                    <b:FormLabel for="projectDesc">Tätigkeitsbeschreibung</b:FormLabel>
                                    <b:TextArea placeholder="Bitte eintragen..." b:id="projectDesc"
                                                addStyleNames="{style.textArea}" ui:field="textDiscription"/>
                                </b:FormGroup>
                            </b:FieldSet>
                        </b:Form>
                    </b:TabPane>
                </b:TabContent>
                <b:FormGroup>
                    <b:FormLabel for="slider">Wahrscheinlichkeit</b:FormLabel>
                    <b:Column size="XS_9,SM_9,MD_9,LG_9" addStyleNames="{style.possibilitySlider}">
                        <b3:Slider b:id="slider" ui:field="mySlider" width="100%" enabled="true" min="0" max="100"
                                   step="25" value="50"/>
                    </b:Column>
                    <b:Column size="XS_2,SM_2,MD_2,LG_2">
                        <b:TextBox b:id="percentagePossibility" ui:field="possibilityPercentage" readOnly="true"
                                   addStyleNames="{style.percentageText}"/>
                    </b:Column>
                    <b:Column size="XS_1,SM_1,MD_1,LG_1" addStyleNames="{style.smallColumn}">
                        <b:VerticalButtonGroup>
                            <b:Button size="EXTRA_SMALL" addStyleNames="{style.buttonTop}"
                                      ui:field="buttonUp"/>
                            <b:Button size="EXTRA_SMALL" addStyleNames="{style.buttonDown}"
                                      ui:field="buttonDown"/>
                        </b:VerticalButtonGroup>
                    </b:Column>
                </b:FormGroup>
            </b:Row>
            <b:Row addStyleNames="{style.smallContainer}">
                <widgets:UtilizationWidget></widgets:UtilizationWidget>
            </b:Row>
        </b:Column>
        <b:Column size="XS_12,SM_12,MD_8,LG_8" addStyleNames="{style.mainColumn}">
            <b:Row addStyleNames="{style.largeContainer}">
                <b:Heading size="H3" addStyleNames="{style.titleRight}" ui:field="dateHeading"/>
            </b:Row>
            <b:Row addStyleNames="{style.largeContainer}">
                <b:Heading size="H3" addStyleNames="{style.titleRight}" text=""/>
            </b:Row>
            <b:Row addStyleNames="{style.largeContainer}" ui:field="content">
                <!-- Full Calendar -->
            </b:Row>
            <b:Row addStyleNames="{style.largeContainer}">
                <b:Button type="PRIMARY" text="Buchen" pull="RIGHT"/>
            </b:Row>
        </b:Column>
    </b:Container>
</ui:UiBinder>