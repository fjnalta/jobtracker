<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	/*Container*/
	.headerRow {
		margin: 10px;
		padding: 10px;
		background-color: #ffffff;
	}
	.bottomRow {
		margin: 10px;
	}
	
	.mainColumn {
		padding: 0;
	}
	
	.largeContainer {
		margin-top: 10px;
		margin-bottom: 10px;
		margin-left: 10px;
		margin-right: 0px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	.smallContainer {
		margin: 10px 0px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	/*Title*/
	.title {
		float: right;
	}
	
	/*Infobox*/
	.bigButton {
		margin: 10px;
		text-align: left;
	}
	
	.infoHeader {
		margin: 10px;
	}
	
	.infoName {
		margin: 5px;
		float: left;
	}
	
	.infoContent {
		margin: 5px;
		float: right;
		color: #ff0066;
	}
	
	.horizontalfillRow {
		width: 100%;
		margin: 0;
	}
	</ui:style>
	<b:Container fluid="true">
		<b:Row addStyleNames="{style.headerRow}">
			<b:Heading size="H3" addStyleNames="{style.title}" text="Alle Projekte" />
		</b:Row>
		<b:Row addStyleNames="{style.bottomRow}">
			<b:Column size="XS_4,SM_4,MD_4,LG_4" addStyleNames="{style.mainColumn}">
				<b:Row addStyleNames="{style.smallContainer}">
					<b:ButtonGroup width="100%">
						<b:Button dataToggle="DROPDOWN" text="Projekt" type="DEFAULT"
							addStyleNames="{style.bigButton}" block="true" />
						<b:DropDownMenu>
							<b:AnchorListItem>Projekt x</b:AnchorListItem>
							<b:AnchorListItem>Projekt y</b:AnchorListItem>
							<b:AnchorListItem>Projekt z</b:AnchorListItem>
						</b:DropDownMenu>
					</b:ButtonGroup>
					<b:ButtonGroup width="100%">
						<b:Button dataToggle="DROPDOWN" text="Kunde" type="DEFAULT"
							addStyleNames="{style.bigButton}" block="true" />
						<b:DropDownMenu>
							<b:AnchorListItem>Kunde x</b:AnchorListItem>
							<b:AnchorListItem>Kunde y</b:AnchorListItem>
							<b:AnchorListItem>Kunde z</b:AnchorListItem>
						</b:DropDownMenu>
					</b:ButtonGroup>
				</b:Row>
				<b:Row addStyleNames="{style.smallContainer}">
					<g:VerticalPanel width="100%">
						<b:Heading size="H3" text="Information" addStyleNames="{style.infoHeader}" />
						<b:Row addStyleNames="{style.horizontalfillRow}">
							<b.html:Span addStyleNames="{style.infoName}" text="Kunde:" />
							<b.html:Span addStyleNames="{style.infoContent}"
								text="#Kundenname" />
						</b:Row>
						<b:Row addStyleNames="{style.horizontalfillRow}">
							<b.html:Span addStyleNames="{style.infoName}" text="Budget:" />
							<b.html:Span addStyleNames="{style.infoContent}"
								text="#BudgetBetrag" />
						</b:Row>
						<b:Row addStyleNames="{style.horizontalfillRow}">
							<b.html:Span addStyleNames="{style.infoName}" text="Zeitraum:" />
							<b.html:Span addStyleNames="{style.infoContent}"
								text="#Zeitraum" />
						</b:Row>

					</g:VerticalPanel>
				</b:Row>
			</b:Column>
			<b:Column size="XS_8,SM_8,MD_8,LG_8" addStyleNames="{style.mainColumn}">
				<b:Row addStyleNames="{style.largeContainer}">
					<!-- Project diagram -->
					<b:Heading size="H3" text="Terasda" />
					
				</b:Row>
			</b:Column>
		</b:Row>
	</b:Container>

</ui:UiBinder> 