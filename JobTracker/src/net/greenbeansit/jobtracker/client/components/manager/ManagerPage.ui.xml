	<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:widgets="urn:import:net.greenbeansit.jobtracker.client.components.widgets">
	<ui:style
		type="net.greenbeansit.jobtracker.client.components.manager.ManagerPage.ManagerPageStyle">
		/*Container*/
		.mainColumn {
			padding: 0;
		}
		
		.largeContainer {
			margin-top: 10px;
			margin-bottom: 10px;
			margin-left: 10px;
			margin-right: 10px;
			padding: 10px;
			background-color: #ffffff;
		}
		
		.smallContainer {
			margin: 10px 10px;
			padding: 10px;
			background-color: #ffffff;
		}
		
		.employeeList {
			margin: 5px;
		}
		
		.employeeListItem {
			padding: 0px;
			margin: 0px;
			display: inline-block;
			width: 100%;
			background-color: #ffffff;
		}
		
		.employeeListItem :HOVER {
			background-color: #ececec;
		}
		
		/*Title*/
		.titleLeft {
			float: left;
			margin-top: 5px;
			margin-bottom: 5px;
		}
		
		.titleRight {
			float: right;
			margin: 0;
		}
		
		.columnHeader {
			background-color: #ffffff;
			display: inline-block;
		}
		
		.columnHeader:HOVER {
			background-color: #ececec;
			cursor: default;
		}
		
		.columnHeaderName {
			width: 30%;
			text-align: left;
		}
		
		.columnHeaderUtilization {
			width: 70%;
			text-align: left;
		}
		
		.columnTitle {
			margin: 5px;
			display: inline-block;
			-webkit-touch-callout: none; /* iOS Safari */
			-webkit-user-select: none; /* Chrome/Safari/Opera */
			-khtml-user-select: none; /* Konqueror */
			-moz-user-select: none; /* Firefox */
			-ms-user-select: none; /* Internet Explorer/Edge */
		}
		</ui:style>
	<b:Container fluid="true">
		<b:Column size="XS_12,SM_12,MD_4,LG_4" addStyleNames="{style.mainColumn}">
			<b:Row addStyleNames="{style.smallContainer}">
				<b:Heading size="H4" text="Filter" addStyleNames="{style.titleLeft}" />
				<s:MultipleSelect liveSearch="true"
					liveSearchPlaceholder="Jobname" ui:field="selectJob">
				</s:MultipleSelect>
			</b:Row>
		</b:Column>
		<b:Column size="XS_12,SM_12,MD_8,LG_8" addStyleNames="{style.mainColumn}">
			<b:Row addStyleNames="{style.largeContainer}">
				<b:Heading size="H3" addStyleNames="{style.titleRight}"
					text="Alle Mitarbeiter" />
			</b:Row>
			<b:Row addStyleNames="{style.largeContainer}">
				<b.html:ClearFix addStyleNames="{style.columnHeader} {style.columnHeaderName}"
					ui:field="columnHeaderName">
					<b:Heading size="H4" text="Name" addStyleNames="{style.columnTitle}" />
					<b:Heading size="H4" text="" addStyleNames="{style.columnTitle}"
						ui:field="columnHeaderNameArrow" />
				</b.html:ClearFix>
				<b.html:ClearFix
					addStyleNames="{style.columnHeader} {style.columnHeaderUtilization}"
					ui:field="columnHeaderUtilization">
					<b:Heading size="H4" text="Auslastung" addStyleNames="{style.columnTitle}" />
					<b:Heading size="H4" text="" addStyleNames="{style.columnTitle}"
						ui:field="columnHeaderUtilizationArrow" />
				</b.html:ClearFix>
			</b:Row>
			<b:Row addStyleNames="{style.largeContainer}" ui:field="employeeList" />
		</b:Column>
	</b:Container>
</ui:UiBinder> 