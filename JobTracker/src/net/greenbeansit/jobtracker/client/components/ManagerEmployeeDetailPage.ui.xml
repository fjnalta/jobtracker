<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:widgets="urn:import:net.greenbeansit.jobtracker.client.components.widgets">
	<ui:style>
	/*Container*/
	.headerRow {
		margin: 10px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	.bottomRow {
		margin: 0px;
	}
	
	.mainColumn {
		padding: 0;
	}
	
	.largeContainer {
		margin-top: 10px;
		margin-bottom: 10px;
		margin-left: 10px;
		margin-right: 10px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	.smallContainer {
		margin: 10px 10px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	/*Title*/
	.title {
		float: right;
		margin: 0;
	}
	
	.anchorBackward {
		float: left;
	}
	
	/*Infobox*/
	.bigButton {
		margin: 10px;
		text-align: left;
		display: block;
	}
	
	.infoHeader {
		margin: 10px;
	}
	
	.infoName {
		margin: 5px;
		float: left;
	}
	
	.infoContent {
		margin: 5px;
		float: right;
		color: #ff0066;
	}
	
	.horizontalfillRow {
		width: 100%;
		margin: 0;
	}
	.infoFieldHeading {
		margin: 5px;
	}
	.infoFieldContainer {
		margin: 10px;
	}
	.infoFieldLabel {
		width: 30%;
		float: left;
		display: inline-block;
		text-align: left;
		color: black;
	}
	.infoFieldValue {
		width: 70%;
		float: right;
		display: inline-block;
		text-align: right;
		color: gray;
	}
	</ui:style>
	<b:Container fluid="true">
		<b:Row addStyleNames="{style.headerRow}">
			<g:Anchor text="&lt; Alle Mitarbeiter" href="#manager"
				addStyleNames="{style.anchorBackward}" />
			<b:Heading size="H3" addStyleNames="{style.title}" text="Jesus Christus"
				ui:field="titleEmployeeName" />
		</b:Row>
		<b:Row addStyleNames="{style.bottomRow}">
			<b:Column size="XS_12,SM_12,MD_4,LG_4" addStyleNames="{style.mainColumn}">
				<b:Row addStyleNames="{style.smallContainer}">
					<b:Heading size="H4" text="Information" addStyleNames="{style.infoFieldHeading}"/>
					<b.html:ClearFix addStyleNames="{style.infoFieldContainer}">
						<b.html:Span text="Name:" addStyleNames="{style.infoFieldLabel}"/>
						<b.html:Span text="Christus" ui:field="textEmployeeName" addStyleNames="{style.infoFieldValue}"/>
					</b.html:ClearFix>
					<b.html:ClearFix addStyleNames="{style.infoFieldContainer}">
						<b.html:Span text="Vorname:" addStyleNames="{style.infoFieldLabel}"/>
						<b.html:Span text="Jesus" ui:field="textEmployeeSurName" addStyleNames="{style.infoFieldValue}"/>
					</b.html:ClearFix>
					<b.html:ClearFix addStyleNames="{style.infoFieldContainer}">
						<b.html:Span text="Abteilung:" addStyleNames="{style.infoFieldLabel}"/>
						<b.html:Span text="Kundendienst" ui:field="textEmployeeDivision" addStyleNames="{style.infoFieldValue}"/>
					</b.html:ClearFix>
				</b:Row>
				<b:Row addStyleNames="{style.smallContainer}">
					<widgets:UtilizationWidget/>
				</b:Row>
			</b:Column>
			<b:Column size="XS_12,SM_12,MD_8,LG_8" addStyleNames="{style.mainColumn}">
				<b:Row addStyleNames="{style.largeContainer}">
					<b:NavTabs>
						<b:TabListItem active="true" dataTarget="#tab1"
							text="TÃ¤tigkeiten" />
						<b:TabListItem dataTarget="#tab2" text="Stundennachweis" />
						<b:TabListItem dataTarget="#tab3" text="Kapaplanung" />
					</b:NavTabs>
					<b:TabContent>
						<b:TabPane b:id="tab1">
							<b.html:ClearFix ui:field="activityChartContainer">
								
							</b.html:ClearFix>
						</b:TabPane>
						<b:TabPane b:id="tab2">

						</b:TabPane>
						<b:TabPane b:id="tab3">

						</b:TabPane>
					</b:TabContent>
				</b:Row>
			</b:Column>
		</b:Row>
	</b:Container>
</ui:UiBinder> 