<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:widgets="urn:import:net.greenbeansit.jobtracker.client.components.widgets">
	<ui:style>
	/*Container*/
	.mainColumn {
		padding: 0;
	}
	
	.largeContainer {
		margin-top: 10px;
		margin-bottom: 10px;
		margin-left: 10px;
		margin-right: 10px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	.smallContainer {
		margin: 10px 10px;
		padding: 10px;
		background-color: #ffffff;
	}
	
	.employeeList {
		margin: 5px;
	}
	
	.employeeList > a {
		padding: 5px;
		margin: 0;
		background-color: #ffffff;
	}
	.employeeList > a :HOVER {
		background-color: #ff5588;
		width: 100%;
	}
	
	/*Title*/
	.title {
		float: right;
		margin: 0;
	}
	</ui:style>
	<b:Container fluid="true">
		<b:Column size="XS_12,SM_12,MD_4,LG_4" addStyleNames="{style.mainColumn}">
			<b:Row addStyleNames="{style.smallContainer}">
				<b:Heading size="H4" text="Filter" addStyleNames="{style.title}" />
				<b.html:Span text="Job:" />
				<s:MultipleSelect liveSearch="true"
					liveSearchPlaceholder="Jobname">
					<s:Option text="001|555|VW Intern" />
					<s:Option text="002|544|HeidCement" />
					<s:Option text="001|533|BASF"/>
				</s:MultipleSelect>
			</b:Row>
		</b:Column>
		<b:Column size="XS_12,SM_12,MD_8,LG_8" addStyleNames="{style.mainColumn}">
			<b:Row addStyleNames="{style.largeContainer}">
				<b:Heading size="H3" addStyleNames="{style.title}" text="Alle Mitarbeiter" />
			</b:Row>
			<b:Row addStyleNames="{style.largeContainer}" ui:field="employeeList">

			</b:Row>
		</b:Column>
	</b:Container>
</ui:UiBinder> 