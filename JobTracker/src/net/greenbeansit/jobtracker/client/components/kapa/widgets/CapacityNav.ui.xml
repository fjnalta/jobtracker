<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:b3="urn:import:org.gwtbootstrap3.extras.slider.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.textArea {
		max-width: 100%;
		min-width: 100%;
		min-height: 35px;
	}
	
	.buttonText {
		min-width: 50px;
		height: 43px;
	}
	
	.possibilitySlider {
		padding-top: 12px;
	}
	
	.buttonTop {
		border-radius: 4px 4px 0px 0px !important;
	}
	
	.buttonDown {
		border-radius: 0px 0px 4px 4px !important;
	}
	
	.buttonSave {
		margin-bottom: 5px;
	}
	
	.smallColumn {
		padding-left: 2px;
	}
	
	.select {
		border-radius: 0;
	}
	
	.select>button {
		border-radius: 0 !important;
		background: #000099
	}
	
	.button-blue {
		background: #000099
	}
	</ui:style>
	<h:ClearFix ui:field="container">
		<b:NavTabs justified="true">
			<b:TabListItem dataTarget="#newProject" active="true" text="Neues Projekt" ui:field="newProject"/>
			<b:TabListItem dataTarget="#myProjects" text="Meine Projekte" ui:field="myProjects"/>
		</b:NavTabs>
		<b:TabContent>
			<b:TabPane b:id="newProject" active="true" ui:field="newProjectPane">
				<b:Form>
					<b:FieldSet>
						<b:FormGroup>
							<b:FormLabel for="projectName">Projektname</b:FormLabel>
							<select:Select liveSearch="true"
								liveSearchPlaceholder="Name" placeholder="Projekt ausw채hlen"
								type="PRIMARY" title="Projekt ausw채hlen..." ui:field="selectJob"
								addStyleNames="{style.select}">
								<s:OptGroup label="Meine Jobs" ui:field="allJobsOptGroup">
								</s:OptGroup>
								<s:OptGroup label="Andere Jobs" ui:field="myJobsOptGroup">
								</s:OptGroup>
							</select:Select>
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel for="projectDesc">T채tigkeitsbeschreibung</b:FormLabel>
							<b:TextArea placeholder="Bitte eintragen..." ui:field="description"
								addStyleNames="{style.textArea}" />
							<b:Heading size="H3" subText="Projekt Erstellen" />
							<b:FormLabel for="projectName">Projektname</b:FormLabel>
							<b:TextBox placeholder="Bitte eintragen..." ui:field="textIdentifier" />
						</b:FormGroup>
						<b:Button type="PRIMARY" text="Speichern" ui:field="buttonSave"
							addStyleNames="{style.buttonSave} {style.button-blue}" />
					</b:FieldSet>
				</b:Form>
			</b:TabPane>
			<b:TabPane b:id="myProjects" ui:field="myProjectsPane">
				<b:Form>
					<b:FieldSet>
						<b:FormGroup>
							<b:FormLabel>Projektname</b:FormLabel>
							<b:TextBox placeholder="Projektname" ui:field="myProjectsProjectName" />
							<b:FormLabel for="projectDesc">T채tigkeitsbeschreibung</b:FormLabel>
							<b:TextArea placeholder="Bitte eintragen..." addStyleNames="{style.textArea}" ui:field="myProjectsDescription"/>
						</b:FormGroup>
					</b:FieldSet>
				</b:Form>
			</b:TabPane>
		</b:TabContent>
		<b:FormGroup>
			<b:FormLabel for="slider">Wahrscheinlichkeit</b:FormLabel>
			<b:Column size="XS_9,SM_9,MD_9,LG_9" addStyleNames="{style.possibilitySlider}">
				<b3:Slider ui:field="mySlider" width="100%" enabled="true"
					min="0" max="100" step="25" value="50" />
			</b:Column>
			<b:Column size="XS_2,SM_2,MD_2,LG_2">
				<b:TextBox ui:field="possibilityPercentage" readOnly="true"
					addStyleNames="{style.buttonText}" />
			</b:Column>
			<b:Column size="XS_1,SM_1,MD_1,LG_1" addStyleNames="{style.smallColumn}">
				<b:VerticalButtonGroup>
					<b:Button size="EXTRA_SMALL" addStyleNames="{style.buttonTop}"
						ui:field="buttonUp" />
					<b:Button size="EXTRA_SMALL" addStyleNames="{style.buttonDown}"
						ui:field="buttonDown" />
				</b:VerticalButtonGroup>
			</b:Column>
		</b:FormGroup>
	</h:ClearFix>
</ui:UiBinder>