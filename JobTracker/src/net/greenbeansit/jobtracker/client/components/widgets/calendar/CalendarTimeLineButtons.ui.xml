<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.buttonStyle {
		border-radius: 100%;
		height: 25px;
		width: 25px;
		margin: 2px 2px 2px 2px;
	}
	
	.buttonForm {
		margin-top: 0.6em;
		width: 200px;
	}
	</ui:style>

	<h:Div addStyleNames="{style.buttonForm}">
		<b:Column size="XS_1">
			<b:Button ui:field="buttonWeek" addStyleNames="{style.buttonStyle}" />
		</b:Column>
		<b:Column size="XS_1">
			<b:Button ui:field="buttonMonth" addStyleNames="{style.buttonStyle}" />
		</b:Column>
		<b:Column size="XS_1">
			<b:Button text="X" ui:field="buttonYear" addStyleNames="{style.buttonStyle}" />
		</b:Column>
	</h:Div>
</ui:UiBinder> 