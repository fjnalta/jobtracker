<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui">
	<ui:style>
	.buttonStyle {
		border-radius: 100% !important;
		height: 25px;
		width: 25px;
		margin: 2px 2px 2px 2px;
	}
	
	.buttonStyle-active {
		border-radius: 100% !important;
		height: 25px;
		width: 25px;
		margin: 2px 2px 2px 2px;
		color: grey;
	}
	.tabField {
		padding-top: 10px;
		padding-bottom: 10px;
		padding-left: 5px;
		padding-right: 5px;
	}
	
	.row {
		margin: 0px;
		padding-top: 5px;
		padding-bottom: 5px;
		padding-left: 5px;
		padding-right: 5px;
	}
	
	.textArea {
		max-width: 100%;
		min-width: 100%;
		min-height: 35px;
		border-radius: 0;
	}
	
	.button {
		margin-top: 5px;
		margin-bottom: 5px;
		border-radius: 0;
	}
	
	.button-blue {
		background: #000099
	}
	
	.collapse {
		margin-top: 5px;
		margin-bottom: 5px;
	}
	.select {
		border-radius: 0;
	}
	
	.select > button {
		border-radius: 0 !important;
		background: #000099
	}
	</ui:style>
	<h:ClearFix>
		<b:Row addStyleNames="{style.row}">
			<b:FormGroup>
				<b:FormLabel for="description1" ui:field="labelDescription"></b:FormLabel>
				<b:TextArea placeholder="" b:id="description1"
					addStyleNames="{style.textArea}" ui:field="textDiscription" />
			</b:FormGroup>
			<b:FormGroup>
				<s:Select ui:field="selectTaskId" placeholder="TaskID auswÃ¤hlen" type="PRIMARY"
			addStyleNames="{style.select}">
					<s:OptGroup ui:field="optGroupTaskId">
					</s:OptGroup>
				</s:Select>
			</b:FormGroup>
		</b:Row>

		<b:Row addStyleNames="{style.row}">
			<b:FormLabel ui:field="headingCollapseTemplate"></b:FormLabel>
			<b:FormGroup>
				<b:TextBox placeholder="" b:id="textTemplateName"
					ui:field="textName" />
				<b:Button text="" addStyleNames="{style.button}" ui:field="buttonSave" />
			</b:FormGroup>
			<b:FormGroup>
				<s:Select ui:field="selectTemplate">
					<s:OptGroup ui:field="optGroupTemplate">
					</s:OptGroup>
				</s:Select>
				<b:Button text="Vorlage laden" addStyleNames="{style.button}"
					ui:field="buttonLoad" />
			</b:FormGroup>
		</b:Row>
	</h:ClearFix>
</ui:UiBinder> 