<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.row {
		border-style:solid;
		border-width:1px;
		border-color:white;
		}
		.tab {
		background-color:white;
		}
		.navTab{
		width:50%;
		}
	</ui:style>
	<b:Row addStyleNames="{style.row}">
		<b:NavTabs>
			<b:TabListItem active="true" dataTarget="#tabAuslastung"
				text="AUSLASTUNG" addStyleNames="{style.navTab}" />
			<b:TabListItem dataTarget="#tabArbeitszeit" text="ARBEITSZEIT"
				addStyleNames="{style.navTab}" />
		</b:NavTabs>
		<b:TabContent>
			<b:TabPane active="true" b:id="tabAuslastung"
				addStyleNames="{style.tab}">
				<g:HTMLPanel>
					Hier wird die Auslastung als Pie Chart angezeigt
				</g:HTMLPanel>
			</b:TabPane>
			<b:TabPane b:id="tabArbeitszeit" addStyleNames="{style.tab}">
				<g:HTMLPanel>
					Hier wird die Arbeitszeit angezeigts
				</g:HTMLPanel>
			</b:TabPane>
		</b:TabContent>
	</b:Row>
</ui:UiBinder> 