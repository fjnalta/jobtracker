<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.row {
		border-style:solid;
		border-width:1px;
		border-color:white;
		margin-top:25px;
		}
		.tab {
		background-color: lightgrey;
		}
		.slider {
		background-color: #669966;
		color:red;
		}
		.slider .active {
		background-color: #FF7600;
		}
		.NavTabs>li{
		background-color:black;
		}
	
	</ui:style>
	<b:Row addStyleNames="{style.row}">
		<b:NavTabs justified="true" >
			<b:TabListItem active="true" dataTarget="#tabAuslastung"
				text="AUSLASTUNG"/>
			<b:TabListItem dataTarget="#tabArbeitszeit" text="ARBEITSZEIT"/>
		</b:NavTabs>
		<b:TabContent>
			<b:TabPane active="true" b:id="tabAuslastung"
				addStyleNames="{style.tab}">
				<b:Carousel b:id="carousel-basic">
					<b:CarouselIndicators>
						<b:CarouselIndicator dataTarget="#carousel-basic"
							dataSlideTo="0" active="true" addStyleNames="{style.slider}"/>
						<b:CarouselIndicator dataTarget="#carousel-basic"
							dataSlideTo="1" />
						<b:CarouselIndicator dataTarget="#carousel-basic"
							dataSlideTo="2" />
					</b:CarouselIndicators>
					<b:CarouselInner>
						<b:CarouselSlide active="true">
							<g:HTMLPanel>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
								<br>TEST</br>
							</g:HTMLPanel>
						</b:CarouselSlide>
						<b:CarouselSlide>
							<b:Image
								url="https://gwtbootstrap3.github.io/gwtbootstrap3-demo/images/carousel2.png" />
						</b:CarouselSlide>
						<b:CarouselSlide>
							<b:Image
								url="https://gwtbootstrap3.github.io/gwtbootstrap3-demo/images/carousel3.png" />
						</b:CarouselSlide>
					</b:CarouselInner>

				</b:Carousel>
			</b:TabPane>
			<b:TabPane b:id="tabArbeitszeit" addStyleNames="{style.tab}">
				<g:HTMLPanel>
					Hier wird die Arbeitszeit angezeigts
				</g:HTMLPanel>
			</b:TabPane>
		</b:TabContent>
	</b:Row>
</ui:UiBinder> 