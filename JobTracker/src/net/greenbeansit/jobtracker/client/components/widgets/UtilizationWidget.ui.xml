<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:components="urn:import:net.greenbeansit.jobtracker.client.components.widgets"
	xmlns:d="urn:import:com.google.gwt.canvas.dom.client" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">
	<ui:style>
	.utilizationDiagram {
		width: 200px;
		height: 200px;
		position: absolute;
		left: 0;
		right: 0;
		margin-top: 45px;
		margin-left: auto;
		margin-right: auto;
	}
	
	.labelName {
		color: #000000;
	}
	
	.labelValue {
		font-size: 36px;
		color: #ff0066;
		text-align: left;
		margin-top: 20px;
	}
	</ui:style>
	<h:ClearFix ui:field="container">
		<b:Column size="XS_12,SM_12,MD_6,LG_6">
			<b:Heading size="H4" text="Verbleibende Urlaubstage:"/>
			<h:Span text="13" addStyleNames="{style.labelValue}" />
		</b:Column>
		<b:Column size="XS_12,SM_12,MD_6,LG_6">
			<b:Heading size="H4" text="Auslastung:" />
			<components:PercentageRingDiagram
				addStyleNames="{style.utilizationDiagram}" ui:field="utilizationDiagram" />
		</b:Column>
	</h:ClearFix>
</ui:UiBinder> 