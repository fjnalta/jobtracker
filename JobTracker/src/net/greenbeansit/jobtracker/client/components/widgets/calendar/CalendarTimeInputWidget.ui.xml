<?xml version="1.0"?>

<ui:UiBinder xmlns:s="urn:import:javax.swing"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:org.gwtbootstrap3.client.ui.gwt">
	<ui:style>
	.button {
		font-size: 10px;
		line-height: 0px;
		text-align: center;
		padding: 0;
		border: none;
		float: left;
	}
	
	.buchen {
		float: right;
		margin-left: 8em;
	}
	
	.button, .buttonLeft{
		margin-top: 5px;
	}
	
	.textInput {
		border-bottom: none;
		border-right: none;
	}
	
	.text {
		margin-top: 15px;
		line-height: 0px;
		text-align: center;
		padding: 0;
		border: none;
		background-color: white;
		color: black;
		float: right;
	}
	
	.buttonLeft {
		float: right;
		font-size: 10px;
		line-height: 0px;
		text-align: center;
		padding: 0;
		border: none;
	}
	</ui:style>
	<b:Container fluid="true">
		<b:Row>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:Label addStyleNames="{style.text}">Pause</b:Label>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:IntegerBox addStyleNames="{style.textInput}"
					ui:field="pause" >00:30</b:IntegerBox>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:Label addStyleNames="{style.text}">Dauer</b:Label>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:IntegerBox addStyleNames="{style.textInput}"
					ui:field="workTime" >03:00</b:IntegerBox>
			</b:Column>

			<b:Column offset="MD_1" size="XS_1,SM_1,MD_1,LG_1">
				<b:Row>
					<b:Button addStyleNames="{style.buttonLeft}" ui:field="buttonUpStart" />
				</b:Row>
				<b:Row>
					<b:Button addStyleNames="{style.buttonLeft}" ui:field="buttonDownStart" />
				</b:Row>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:TextBox addStyleNames="{style.textInput}" ui:field="eventStart">12:00</b:TextBox>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:TextBox addStyleNames="{style.textInput}" ui:field="eventEnd">22:59</b:TextBox>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:Row>
					<b:Button addStyleNames="{style.button}" ui:field="buttonUpEnd" />
				</b:Row>
				<b:Row>
					<b:Button addStyleNames="{style.button}" ui:field="buttonDownEnd" />
				</b:Row>
			</b:Column>

			<b:Column size="XS_1,SM_1,MD_1,LG_1">
				<b:Button addStyleNames="{style.buchen}" ui:field="buttonBuchen"
					text="Buchen" />
			</b:Column>
		</b:Row>
	</b:Container>
