<?xml version="1.0"?>

<ui:UiBinder xmlns:s="urn:import:javax.swing"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:t="urn:ui:com.google.gwt.dom.client">
	<ui:style src="css/CalendarTimeInput.css" />
	
	<b:Container fluid="true" addStyleNames="{style.noPadding}">
		<b:Row addStyleNames="{style.row}">
			<b:InputGroup addStyleNames="{style.inputGroup}">
				<b:InputGroupAddon addStyleNames="{style.addonLeft}">Datum von</b:InputGroupAddon>
				<b:TextBox ui:field="dateStart" height="43px">06.05</b:TextBox>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonUpDateStart" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonDownDateStart" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupAddon>bis</b:InputGroupAddon>
				<b:TextBox ui:field="dateEnd" height="43px">06.05</b:TextBox>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonUpDateEnd" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonDownDateEnd" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
			</b:InputGroup>
		</b:Row>
		<b:Row addStyleNames="{style.row}">
			<b:InputGroup>
				<b:InputGroupAddon addStyleNames="{style.addonLeft}">Uhrzeit von</b:InputGroupAddon>
				<b:TextBox ui:field="eventStart" height="43px">12:00</b:TextBox>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourUpStart" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourDownStart" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteUpStart" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteDownStart" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupAddon>bis</b:InputGroupAddon>
				<b:TextBox ui:field="eventEnd" height="43px">13:00</b:TextBox>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourUpEnd" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourDownEnd" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteUpEnd" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteDownEnd" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
			</b:InputGroup>
		</b:Row>
		<b:Row addStyleNames="{style.row}">
			<b:InputGroup>
				<b:InputGroupAddon addStyleNames="{style.addonLeft}">Pause</b:InputGroupAddon>
				<b:TextBox ui:field="pause" height="43px">00:00</b:TextBox>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourUpPause" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourDownPause" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteUpPause" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteDownPause" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupAddon>Dauer</b:InputGroupAddon>
				<b:TextBox ui:field="workTime" height="43px">13:00</b:TextBox>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourUpDuration" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeHourDownDuration" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
				<b:InputGroupButton>
					<b:VerticalButtonGroup>
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteUpDuration" />
						<b:Button size="EXTRA_SMALL"
							ui:field="buttonTimeMinuteDownDuration" />
					</b:VerticalButtonGroup>
				</b:InputGroupButton>
			</b:InputGroup>
		</b:Row>
		<h:ClearFix addStyleNames="{style.buttonRow}">
			<b:Button addStyleNames="{style.eventButton}" text="+"
				ui:field="buttonCopy" />
			<b:Button addStyleNames="{style.eventButton}" text="x"
				ui:field="buttonDelete" />
			<b:Button type="PRIMARY" text="Buchen" addStyleNames="{style.button-book}"
				ui:field="buttonBook" />
		</h:ClearFix>
	</b:Container>
</ui:UiBinder>