<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	
	.textMonth {
		font-size: 36px;
		color: red;
		text-align: right;
	}
	
	.textDay {
		font-size: 30px;
	}
	
	.kwStyle {
		font-size: 20px;
	}
	
	.buttonStyle {
		
	}
	
	.formGroupDate {
		float: right;
	}
	
	</ui:style>

	<b:FormGroup addStyleNames="{style.formGroupDate}">
		<g:FlowPanel addStyleNames="col-xs-1">
			<h:Text>KW</h:Text>
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="col-xs-1">
			<h:Text ui:field="kw" addStyleNames="{style.kwStyle}" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="col-xs-1">
			<h:Text ui:field="month" addStyleNames="{style.textMonth}" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="col-xs-1">
			<h:Text ui:field="day" addStyleNames="{style.textDay}" />
		</g:FlowPanel>
	</b:FormGroup>


</ui:UiBinder> 